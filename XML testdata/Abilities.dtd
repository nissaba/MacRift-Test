<!ELEMENT abilities (spells|psionics)+>
<!ELEMENT spells (mageSphere+)>
<!ELEMENT mageSphere (level+)>
<!ATTLIST mageSphere
    name CDATA #IMPLIED
>
<!ELEMENT level (spell)*>
<!ATTLIST level
    lvl CDATA #IMPLIED
  >
<!ELEMENT spell (name, range, duration, damage?, ppe, saving, description)>
<!ELEMENT psionics (psiSphere+)>
<!ELEMENT psiSphere (category+)>
<!ATTLIST psiSphere
    name CDATA #IMPLIED
>
<!ELEMENT category (psipower)*>
<!ATTLIST category
    type CDATA #IMPLIED
  >
<!ELEMENT psipower (name, range, duration, trance?, isp, saving?, description)>
<!ELEMENT name (#PCDATA)>
<!ELEMENT range (#PCDATA)>
<!ELEMENT duration (#PCDATA)>
